{% extends "layout.njk" %} {% block content %}

<div class="card table-container">
  <a href="/instructors/create">novo</a>

  <table whidth="100%">
    <thead>
      <tr>
        <th>Instructor</th>
        <th>Atendimento</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      {% for instructor in instructors %}
      <tr>
        <td>
          <span
          style="background-image: url({{instructor.avatar_url}})"
          ></span>
          {{ instructor.name }}
        </td>
        <td class="container-texto">
          <a>{{ instructor.services }}</a>
        </td>
        <td>
          <a href="/instructors/{{ instructor.id }}" rel="noopener noreferrer"
            >ver</a
          >
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock content %}
